# Development Environment Variables
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://admin:dev123@localhost:27017/voxora-chat-dev?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev123

# JWT Configuration (Development only - NOT for production)
JWT_SECRET=dev-jwt-secret-key-not-for-production-change-this-in-prod
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production-change-this-in-prod
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Debug Configuration
DEBUG=voxora:*
